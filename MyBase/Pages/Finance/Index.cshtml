@page
@model MyBase.Pages.Finance.IndexModel
@{
    ViewData["Title"] = "Finanzen";
}

<div class="finance-page">
    <h2>📊 Finanz-Dashboard</h2>
    <p>Willkommen im Tradingbereich von MyBase. Hier findest du bald alle wichtigen Infos auf einen Blick.</p>

    <div class="dashboard-grid">

        <!-- Marktübersicht (Platzhalter) -->
        <div class="dashboard-card">
            <div class="dashboard-icon">📈</div>
            <div class="dashboard-title">Marktübersicht</div>
            <p class="dashboard-description">DAX, NASDAQ, BTC, ETH …</p>
        </div>

        <!-- Watchlist (Platzhalter) -->
        <div class="dashboard-card">
            <div class="dashboard-icon">📋</div>
            <div class="dashboard-title">Watchlist</div>
            <p class="dashboard-description">Beobachte deine Favoriten</p>
        </div>

        <!-- Depot (Platzhalter) -->
        <div class="dashboard-card">
            <div class="dashboard-icon">💼</div>
            <div class="dashboard-title">Depot</div>
            <p class="dashboard-description">Deine aktuellen Positionen</p>
        </div>

        <!-- Trading-Notizen (Platzhalter) -->
        <div class="dashboard-card">
            <div class="dashboard-icon">📝</div>
            <div class="dashboard-title">Notizen</div>
            <p class="dashboard-description">Trading-Journal & Ideen</p>
        </div>

    </div>
</div>
