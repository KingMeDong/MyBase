@page
@model MyBase.Pages.Calendar.DetailsModel
@{
    ViewData["Title"] = "Termin Details / Bearbeiten";
}

<h2 class="page-title">🗒️ Termin Details / Bearbeiten</h2>

<form method="post" class="form-container">
    <div class="form-group">
        <label asp-for="CalendarEvent.Title"></label>
        <input asp-for="CalendarEvent.Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CalendarEvent.Location"></label>
        <input asp-for="CalendarEvent.Location" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CalendarEvent.Description"></label>
        <textarea asp-for="CalendarEvent.Description" class="form-control"></textarea>
    </div>

  <div class="form-group form-group-datetime">
    <div class="form-group-inline">
        <label asp-for="CalendarEvent.StartDateTime"></label>
        <input asp-for="CalendarEvent.StartDateTime" type="datetime-local" class="form-control" asp-format="{0:yyyy-MM-ddTHH:mm}" />
    </div>

    <div class="form-group-inline">
        <label asp-for="CalendarEvent.EndDateTime"></label>
        <input asp-for="CalendarEvent.EndDateTime" type="datetime-local" class="form-control" asp-format="{0:yyyy-MM-ddTHH:mm}" />
    </div>
</div>

    <div class="form-group">
        <div class="form-check">
            <input asp-for="CalendarEvent.ReminderEnabled" class="form-check-input" type="checkbox" id="reminderToggle" />
            <label class="form-check-label" for="reminderToggle">📧 E-Mail Reminder aktivieren</label>
        </div>
    </div>

    <!-- Reminder Settings block -->
    <div id="reminderSettings" class="reminder-settings @(Model.CalendarEvent.ReminderEnabled ? "" : "hidden")">
        <div class="form-group">
            <label asp-for="CalendarEvent.ReminderMinutesBefore"></label>
            <input asp-for="CalendarEvent.ReminderMinutesBefore" type="number" min="1" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="CalendarEvent.ReminderEmail"></label>
            <input asp-for="CalendarEvent.ReminderEmail" type="email" class="form-control" />
        </div>
    </div>

    <div class="form-group button-group">
        <button type="submit" class="btn btn-success">Speichern</button>
        <a asp-page="./Index" class="btn btn-secondary">Abbrechen</a>
    </div>
</form>

@section Scripts {
    <script>
        // Zeige oder verstecke den Reminder Settings Block beim Umschalten
        const reminderToggle = document.getElementById('reminderToggle');
        const reminderSettings = document.getElementById('reminderSettings');

        function toggleReminderSettings() {
            if (reminderToggle.checked) {
                reminderSettings.classList.remove('hidden');
            } else {
                reminderSettings.classList.add('hidden');
            }
        }

        // Initial ausführen
        toggleReminderSettings();

        // Event Listener
        reminderToggle.addEventListener('change', toggleReminderSettings);
    </script>
}
